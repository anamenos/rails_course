<h1>Portfolio Items</h1>
<%= link_to "Create new Portfolio", new_portfolio_path %>
<%= @portfolio_items.each do |portfolio_item| %>
 <p><%= portfolio_item.title %></p>
 <p><%= portfolio_item.subtitle %></p>
 <p><%= portfolio_item.body %></p>
 <p><%= image_tag portfolio_item.main_image unless portfolio_item.main_image.nil?  %></p>
 <p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
 <p><%= portfolio_item.created_at %></p>
 <p><%= portfolio_item.updated_at %></p>
    <br />
    <p>
     <%= link_to "Edit", edit_portfolio_url(portfolio_item) %>
    </p>
    <br/>
    
<hr />
<% end %>

